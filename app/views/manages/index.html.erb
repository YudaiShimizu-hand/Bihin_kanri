<div class= "container">
 <div class="search-form">
  <%= form_with url: search_path, method: :get, local: true do |f| %>
    <%= f.text_field :keyword, value: @keyword %>
    <%= f.submit "検索" %>
  <% end %>
  <p><%= @manages.count %>件見つかりました。</p>
  </div>
<div class="manage-list">
<%= flash[:notice] %>
<table>
<tr>
    <th>備品名</th>
    <th>収納場所</th>
    <th>数量</th>
    <th></th>
</tr>
<% @manages.each do |f| %>
<tr>
    <td><%= link_to f.name, manage_path(f) %></td>
    <td><%= f.place %></td>
    <td><%= f.number %></td>
    <td>
      <%= link_to "変更", edit_manage_path(f.id), class: "btn btn-outline-success"%> 
      <%= link_to "削除", manage_path(f.id), method: :delete, class: "btn btn-outline-danger"%>
    </td>
<tr>
<% end %>
</table>
<div>
</div>